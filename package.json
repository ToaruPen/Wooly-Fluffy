{
  "name": "wooly-fluffy",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "server",
    "web"
  ],
  "scripts": {
    "format": "node scripts/format-changed.mjs --write",
    "format:changed": "node scripts/format-changed.mjs --write",
    "format:all": "node scripts/format-changed.mjs --write --all",
    "format:check": "node scripts/format-changed.mjs --check --all",
    "format:check:changed": "node scripts/format-changed.mjs --check",
    "check:filenames": "node scripts/check-filenames-changed.mjs --all",
    "check:filenames:changed": "node scripts/check-filenames-changed.mjs",
    "lint:naming": "node scripts/lint-naming-changed.mjs --all",
    "lint:naming:changed": "node scripts/lint-naming-changed.mjs",
    "typecheck": "npm run -w server typecheck && npm run -w web typecheck",
    "lint": "npm run -w server lint && npm run -w web lint",
    "test": "npm run -w server test && npm run -w web test",
    "coverage": "npm run -w server coverage && npm run -w web coverage",
    "deadcode": "knip"
  },
  "knip": {
    "ignore": [
      "web/e2e/webserver.mjs"
    ],
    "ignoreFiles": [
      "server/eslint.naming.config.js",
      "web/eslint.naming.config.js"
    ],
    "ignoreDependencies": [
      "prettier"
    ]
  },
  "devDependencies": {
    "knip": "^5.80.2",
    "prettier": "^3.5.2"
  }
}
