{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "scope_id",
    "status",
    "findings",
    "questions",
    "overall_explanation"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "enum": [
        3
      ]
    },
    "scope_id": {
      "type": "string",
      "minLength": 1
    },
    "status": {
      "type": "string",
      "enum": [
        "Approved",
        "Approved with nits",
        "Blocked",
        "Question"
      ]
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "title",
          "body",
          "priority",
          "code_location"
        ],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 120
          },
          "body": {
            "type": "string",
            "minLength": 1
          },
          "priority": {
            "type": "string",
            "enum": [
              "P0",
              "P1",
              "P2",
              "P3"
            ]
          },
          "code_location": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "repo_relative_path",
              "line_range"
            ],
            "properties": {
              "repo_relative_path": {
                "type": "string",
                "minLength": 1
              },
              "line_range": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "start",
                  "end"
                ],
                "properties": {
                  "start": {
                    "type": "integer",
                    "minimum": 1
                  },
                  "end": {
                    "type": "integer",
                    "minimum": 1
                  }
                }
              }
            }
          }
        }
      }
    },
    "questions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "overall_explanation": {
      "type": "string",
      "minLength": 1
    }
  }
}
